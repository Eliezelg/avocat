---
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="contact" aria-label="Contact section">
  <span class="anchor-target" id="contact-anchor"></span>
  
  <div class="container">
    
    <h2 class="section-title">{t('contact.title')}</h2>
    
    <div class="contact-info">
      <div class="contact-item">
        <div class="icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-phone">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
        </div>
        <div class="info">
          <h3>{t('contact.phone')}</h3>
          <p><a href="tel:+972555571194">+972 55-557-1194</a></p>
        </div>
      </div>
      
      <div class="contact-item">
        <div class="icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </div>
        <div class="info">
          <h3>{t('contact.email')}</h3>
          <p><a href="mailto:Aaron@aat-law.co.il">Aaron@aat-law.co.il</a></p>
        </div>
      </div>
      
      <div class="contact-item">
        <div class="icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="2" y1="12" x2="22" y2="12"></line>
            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
          </svg>
        </div>
        <div class="info">
          <h3>{t('contact.website')}</h3>
          <p><a href="https://www.aat-law.co.il" target="_blank">www.aat-law.co.il</a></p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 5rem 2rem;
    background-color: #f9f9f9;
  }
  
  .anchor-target {
    display: block;
    position: relative;
    top: -100px;
    visibility: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    text-align: center;
    margin-bottom: 3rem;
    color: #2C3E50;
    font-size: 2.5rem;
    position: relative;
  }

  .section-title:after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background-color: #E74C3C;
    margin: 1rem auto 0;
  }

  .contact-info {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
  }

  .contact-item {
    flex: 0 0 calc(33.333% - 2rem);
    min-width: 250px;
    background-color: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.07);
    display: flex;
    align-items: center;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
    transform: translateY(0);
  }
  
  .contact-item::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(to right, var(--color-primary), var(--color-accent));
    transition: height 0.3s ease;
    z-index: -1;
  }
  
  .contact-item:hover {
    transform: translateY(-10px);
  }
  
  .contact-item:hover::before {
    height: 10px;
  }

  .icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background-color: #2C3E50;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1.5rem;
    position: relative;
    box-shadow: 0 5px 15px rgba(44, 62, 80, 0.3);
    transition: all 0.3s ease;
    z-index: 2;
  }
  
  .contact-item:hover .icon {
    transform: scale(1.1) rotate(5deg);
    background-color: var(--color-accent);
  }
  
  .icon::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: rgba(44, 62, 80, 0.2);
    transform: scale(0);
    transition: transform 0.3s ease;
  }
  
  .contact-item:hover .icon::before {
    transform: scale(1.3);
  }

  .rtl .icon {
    margin-right: 0;
    margin-left: 1.5rem;
  }

  .info h3 {
    color: #2C3E50;
    margin: 0 0 0.5rem;
    font-size: 1.2rem;
  }

  .info p {
    margin: 0;
    color: #666;
  }

  .info a {
    color: #34495E;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .info a:hover {
    color: #E74C3C;
  }

  @media (max-width: 768px) {
    .contact-item {
      flex: 0 0 100%;
    }
    
    .section-title {
      font-size: 2rem;
    }
  }
</style>
