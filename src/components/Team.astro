---
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="team" class="team" aria-label="Team section">
  <span class="anchor-target" id="team-anchor"></span>
  
  <div class="container">
    <h2 class="section-title">{t('team.title')}</h2>
    <div class="team-member">
      <div class="member-photo">
        <img src="/images/lawyer-portrait.png" alt="Aaron Toledano" class="member-img" />
      </div>
      <div class="member-info">
        <h3>{t('team.aaron.name')}</h3>
        <p class="member-role">{t('team.aaron.role')}</p>
        <p class="member-description">{t('team.aaron.description')}</p>
        
        <div class="member-contact">
          <a href="mailto:Aaron@aat-law.co.il" class="contact-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span>Aaron@aat-law.co.il</span>
          </a>
          <a href="tel:+972555571194" class="contact-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            <span>+972 55-557-1194</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .team {
    padding: 5rem 2rem;
    background-color: white;
  }
  
  .anchor-target {
    display: block;
    position: relative;
    top: -100px;
    visibility: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    text-align: center;
    margin-bottom: 3rem;
    color: #2C3E50;
    font-size: 2.5rem;
    position: relative;
  }

  .section-title:after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background-color: #2C3E50;
    margin: 1rem auto 0;
  }

  .team-member {
    display: flex;
    align-items: center;
    max-width: 800px;
    margin: 0 auto;
    background-color: #f9f9f9;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    position: relative;
    z-index: 1;
    overflow: hidden;
  }
  
  .team-member::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, rgba(44, 62, 80, 0.03) 0%, rgba(255, 255, 255, 0.05) 100%);
    z-index: -1;
  }
  
  .team-member::after {
    content: '';
    position: absolute;
    width: 150%;
    height: 200px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transform: rotate(45deg);
    top: -100px;
    left: -150px;
    transition: all 0.7s ease;
    z-index: -1;
  }
  
  .team-member:hover::after {
    left: 100%;
  }

  .member-photo {
    flex: 0 0 180px;
    margin-right: 2rem;
    position: relative;
    border-radius: 10px;
    padding: 15px;
    background-color: white;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    transform: rotate(-3deg);
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .member-img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.5s ease;
  }
  
  .team-member:hover .member-photo {
    transform: rotate(0deg) translateY(-5px);
  }
  
  .team-member:hover .member-img {
    transform: scale(1.05);
  }

  .rtl .member-photo {
    margin-right: 0;
    margin-left: 2rem;
  }

  .member-info {
    flex: 1;
  }

  .member-info h3 {
    color: #2C3E50;
    margin-bottom: 0.5rem;
    font-size: 1.8rem;
  }

  .member-role {
    color: #2C3E50;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .member-description {
    color: #666;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .member-contact {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .contact-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-primary);
    text-decoration: none;
    transition: all var(--transition-normal);
  }
  
  .contact-link:hover {
    color: var(--color-accent);
    transform: translateX(5px);
  }
  
  .rtl .contact-link:hover {
    transform: translateX(-5px);
  }
  
  .contact-link svg {
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .team-member {
      flex-direction: column;
      text-align: center;
    }
    
    .member-photo {
      margin-right: 0;
      margin-bottom: 1.5rem;
    }
    
    .rtl .member-photo {
      margin-left: 0;
      margin-bottom: 1.5rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
  }
</style>
